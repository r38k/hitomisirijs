---
import type { CollectionEntry } from "astro:content";
import BaseLayout from "./BaseLayout.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"blog">["data"] & {
  rawContent?: string;
};

const { title, description, pubDate, updatedDate, rawContent } = Astro.props;
---

<BaseLayout>
  <article>
    <div class="prose">
      <div class="title">
        {rawContent && (
          <button class="copy-btn" data-content={rawContent} title="Markdownをコピー">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
              <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
            </svg>
          </button>
        )}
        <h1>{title}</h1>
        <p>{description}</p>
        <div class="date">
          <FormattedDate date={pubDate} />
          {
            updatedDate && (
              <div class="last-updated-on">
                Last updated on <FormattedDate date={updatedDate} />
              </div>
            )
          }
        </div>
        <hr />
      </div>
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  .prose {
    width: 720px;
    max-width: calc(100% - 2em);
    margin: auto;
    padding: 1em;
    color: var(--text-primary);
    font-size: 16px;
    line-height: 1.7;
  }
  .prose :global(h1) {
    font-size: 1.75em;
  }
  .prose :global(h2) {
    font-size: 1.5em;
  }
  .prose :global(h3) {
    font-size: 1.25em;
  }
  .prose :global(h4) {
    font-size: 1.1em;
  }
  .prose :global(h5) {
    font-size: 1em;
  }
  .prose :global(blockquote) {
    font-size: 1em;
  }
  .prose :global(code) {
    font-size: 0.9em;
  }
  .prose :global(pre) {
    font-size: 0.875em;
  }
  .title {
    position: relative;
    margin-bottom: 1em;
    padding: 1em 0;
    text-align: center;
    line-height: 1;
  }
  .title h1 {
    margin: 0 0 0.5em 0;
    color: var(--text-ceramic);
  }
  .date {
    margin-bottom: 0.5em;
    color: var(--text-secondary);
  }
  .last-updated-on {
    font-style: italic;
    color: var(--text-muted);
  }
  .prose hr {
    border-color: var(--bg-accent-dark);
  }
.copy-btn {
    position: absolute;
    top: 0;
    left: 0;
    padding: 0.5em;
    background: var(--bg-accent);
    color: var(--text-secondary);
    border: 1px solid var(--bg-accent-dark);
    border-radius: 4px;
    cursor: pointer;
    transition: background 0.2s, color 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .copy-btn:hover {
    background: var(--bg-accent-dark);
    color: var(--text-primary);
  }
  .copy-btn.copied {
    color: var(--text-ceramic);
  }
</style>

<script>
  document.querySelectorAll('.copy-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const content = btn.getAttribute('data-content');
      if (content) {
        await navigator.clipboard.writeText(content);
        btn.classList.add('copied');
        setTimeout(() => {
          btn.classList.remove('copied');
        }, 2000);
      }
    });
  });
</script>
