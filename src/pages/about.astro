---
import BaseLayout from "../layouts/BaseLayout.astro";
import GitHub from "../components/Icons/GitHub.astro";
import X from "../components/Icons/X.astro";

const socialLinks = [
  {
    id: "github",
    url: "https://github.com/r38k",
    label: "GitHub",
  },
  {
    id: "x",
    url: "https://x.com/r38k2",
    label: "X (Twitter)",
  },
];
---

<BaseLayout>
  <!-- Page identifier -->
  <span class="page-label">About</span>

  <!-- Main text -->
  <p class="about-text">お勉強</p>

  <!-- Accent line -->
  <div class="accent-line"></div>

  <!-- Social links -->
  <div class="social-links">
    {
      socialLinks.map((link) => (
        <a
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          class="social-link"
          aria-label={link.label}
        >
          {link.id === "github" && <GitHub />}
          {link.id === "x" && <X />}
        </a>
      ))
    }
  </div>
</BaseLayout>

<style>
  /* Page identifier */
  .page-label {
    display: block;
    font-size: 10px;
    color: #3a3a4a;
    letter-spacing: 0.4em;
    text-transform: uppercase;
    margin-bottom: 80px;
  }

  /* Main text */
  .about-text {
    margin: 0;
    font-size: 14px;
    color: #7a7a8a;
    line-height: 2.4;
    letter-spacing: 0.08em;
  }

  /* Accent line */
  .accent-line {
    margin-top: 48px;
    width: 40px;
    height: 1px;
    background: linear-gradient(90deg, #d4a574 0%, transparent 100%);
    opacity: 0.4;
  }

  /* Social links */
  .social-links {
    margin-top: 60px;
    display: flex;
    gap: 20px;
    align-items: center;
  }

  .social-link {
    color: var(--text-muted);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
  }

  .social-link:hover {
    color: var(--ceramic-light);
    transform: translateY(-2px);
  }
</style>
